---
// data imports
import * as site from "../data/reading.json";

// component imports
import Row from "./ReadingListRow.astro";
const { reading } = site;
---

<section class="reading-list">
    <h2>Recent Reading</h2>
    <div class="table-wrap">
        <table>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Rating</th>
            </tr>
            {reading.map((item) => <Row item={item} />)}
        </table>
    </div>
</section>
